# ============================================
# Somatic-Canticles Webapp - Environment Variables
# ============================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to version control

# ============================================
# Application
# ============================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:8787
NODE_ENV=development

# ============================================
# Authentication
# ============================================
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your-nextauth-secret-here
NEXTAUTH_URL=http://localhost:3000

# JWT Secret (same for NextAuth and Workers)
# Generate with: openssl rand -base64 32
JWT_SECRET=your-jwt-secret-here

# JWT Expiry (in seconds)
JWT_ACCESS_EXPIRY=900
JWT_REFRESH_EXPIRY=604800

# ============================================
# Database (D1)
# ============================================
# Local development uses wrangler.toml bindings
# Production database ID from: wrangler d1 list
D1_DATABASE_ID=your-d1-database-id

# ============================================
# OAuth Providers (Optional)
# ============================================
# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# ============================================
# External Services
# ============================================
# Sunrise/Sunset API (optional, has free tier)
SUNRISE_API_URL=https://api.sunrise-sunset.org/json

# ============================================
# Error Tracking (Sentry)
# ============================================
# Get DSN from: https://sentry.io/settings/projects/
SENTRY_DSN=https://your-sentry-dsn
SENTRY_AUTH_TOKEN=your-sentry-auth-token
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=somatic-canticles
SENTRY_ENVIRONMENT=development

# ============================================
# Analytics (Google Analytics 4)
# ============================================
# Get from: https://analytics.google.com/
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# ============================================
# Cloudflare (for Workers deployment)
# ============================================
# Get from: https://dash.cloudflare.com/profile/api-tokens
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token
CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_WINDOW=60
RATE_LIMIT_MAX=100

# ============================================
# Feature Flags
# ============================================
NEXT_PUBLIC_ENABLE_SENTRY=false
NEXT_PUBLIC_ENABLE_I18N=false

# ============================================
# Development Defaults (DO NOT USE IN PRODUCTION)
# ============================================
# Admin: admin@somatic-canticles.local / SomaticDev44!
# User: test@example.com / TestUser13!
